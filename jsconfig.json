{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.js",
    "prisma/**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".git"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["@prisma/client"]
  }
}